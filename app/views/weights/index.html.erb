<p id="notice"><%= notice %></p>

<h1>Weights</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <p> Hello <%= @user.first_name %>. Here is your dashboard: </p>
  <p> <strong> Your dry weight: </strong> <%= @user.dry_weight %> </p>
  <p> <strong> Your diuretic: </strong> <%= @user.diuretic_name %> </p>
  <p> User id: <%= @user.id %> </p>

  <tbody>
    <% @weights.map do |weight| %>
      <tr>
      <% if weight.user_id == @user.id %>
        <td><%= weight.created_at %></td>
        <td><%= weight.user_id %></td>
        <td><%= weight.description %></td>
        <td><%= link_to 'Show', weight %></td>
      
          <td><%= link_to 'Edit', edit_weight_path(weight) %></td>
          <td><%= link_to 'Destroy', weight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>

  <%= link_to 'New Weight', new_weight_path, class: "btn btn-primary btn-lg " %>
<% end %>
