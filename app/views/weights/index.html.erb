

<p id="notice"><%= notice %></p>

<h1>Weights</h1>
  <div class="row">
    <div class="col-md-8">
        
        <p> Hello <%= @user.first_name %>. Here is your dashboard: </p>
        <p> <strong> Your dry weight: </strong> <%= @user.dry_weight %> </p>
        <p> <strong> Your diuretic: </strong> <%= @user.diuretic_name %> </p>
    
    </div>
    <div class="col-md-4">
      <% if user_signed_in? %>
        <%= link_to 'New Weight', new_weight_path, class: "btn btn-primary btn-lg " %>
      <% end %>
    </div>
 
  </div>

  <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Weight</th>
          <th colspan="5"></th>
        </tr>
      </thead>

   <tbody>
      <% @weights.map do |weight| %>
        <tr>
          <% if weight.user_id == @user.id %>
            <td><%= weight.created_at %></td>
            <td><%= weight.description %></td>
            <td><%= link_to 'Show   ', weight %><%= link_to 'Edit     ', edit_weight_path(weight) %> <%= link_to 'Delete     ', weight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td> </td>
            <td> </td>
          <%end %>
        </tr>
      <% end %> 
  </tbody>
</table>
